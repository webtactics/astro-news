---
import { Picture } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import Divider from "~/components/bases/divider.astro";
import { categoriesHandler } from "~/lib/handlers/categories";
import { getDateDistance } from "~/lib/utils/date";

type Props = {
  article: CollectionEntry<"articles">;
}

const { article } = Astro.props;

const { remarkPluginFrontmatter } = await render(article);

const category = categoriesHandler.oneCategory(article.data.category.id);
---

<article class="group">
  <a href="#" class="flex flex-col-reverse md:flex-col gap-4">
    <div class="aspect-video overflow-hidden rounded-md">
      <Picture
        src={article.data.cover}
        alt={article.data.covert_alt ? article.data.covert_alt : article.data.title}
        layout="full-width"
        loading={"eager"}
        formats={["avif", "webp"]}
      />
    </div>
    <div class="flex flex-col gap-2">
      <div>
        <h2
          class="text-xl font-semibold group-hover:underline underline-offset-2"
        >
          {article.data.title}
        </h2>
        <p class="text-base-content/90 text-base max-w-lg">
          {article.data.description}
        </p>
      </div>
      <div class="flex items-center text-xs text-base-content/80 mt-2 md:mt-4">
        <span class="text-primary">{category.data.title}</span>
        <Divider/>
        <span>{getDateDistance(remarkPluginFrontmatter.lastModified)}</span>
      </div>
    </div>
  </a>
</article>
