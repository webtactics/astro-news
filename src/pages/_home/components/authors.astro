---
import Author from "~/components/shared/author.astro";
import HeaderSection from "./header-section.astro";
import { authorsHandler } from "~/lib/handlers/authors";

const authors = authorsHandler.limitAurhors(6);
---

<section class="container py-12" data-pagefind-ignore="all">
    <HeaderSection title="Authors" link_title="View all" link_url="/authors"/>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-6 md:gap-4 mt-4 list-none">
        {
            authors.map((author) => (
                <Author author={author}/>
            ))
        }
    </div>
</section>
