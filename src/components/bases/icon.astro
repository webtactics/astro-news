---
import Github from "~/assets/svgs/github.astro";
import NewTwitter from "~/assets/svgs/new-twitter.astro";
import Telegram from "~/assets/svgs/telegram.astro";
import Facebook from "~/assets/svgs/facebook.astro";

export interface Props {
  icon: string | undefined;
}

const { icon } = Astro.props;

if (!icon) {
  throw new Error("Icon prop is required");
}
---

{icon === "github" && <Github />}
{icon === "telegram" && <Telegram />}
{icon === "newTwitter" && <NewTwitter />}
{icon === "facebook" && <Facebook />}
